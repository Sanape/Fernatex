    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <title>Cotizador</title>
</head>

<body class="cotizadorBody">
    
    <%- include('./partials/header') %>
    <main>


        <section id="cotizador">
            <div class="cotizadorContainer">
                <form action="/confirm">        
                    <div class="step step-1 index active">
                        <div class="form-group">
                            <label for="tela">Ingrese largo deseado</label>
                            <input type="text" id="tela" placeholder="Largo mín 300m"name="tela">
                        </div>
                        <div class="form-group">
                            <label for="opciones">Opciones</label>
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Seleccionar color de Tela</option>
                                <option value="claro">Claro</option>
                                <option value="oscuro">Oscuro</option>
                            </select>
                          </div>
                          <div >      
                            <button type="button" class="next-btn">Seleccionar estampado</button>
                        </div>
                    </div>
    
                    <div class="step step-2">
                        <div class="form-group">
                            <label for="tipoEstampado">Establecer estampado</label>
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Seleccionar de nuestros estampados</option>
                                <option value="claro">Animal</option>
                                <option value="claro">Infantil</option>
                                <option value="claro">Rayados</option>
                            </select>
                            
                        </div>
                        <div class="imageCotizador">
                            <div class="column">
                                <img src="/images/estampados/animal/1.jpg" alt="Snow" style="width:100%; box-shadow: 0px 3px 6px rgba(0,0,0,0.4); cursor: pointer;">
                              </div>
                              <div class="column">
                                <img src="/images/estampados/infantil/1.jpg" alt="Forest" style="width:100%; box-shadow: 0px 3px 6px rgba(0,0,0,0.4); cursor: pointer;">
                              </div>
                              <div class="column">
                                <img src="/images/estampados/rayados/1.jpg" alt="Mountains" style="width:100%; box-shadow: 0px 3px 6px rgba(0,0,0,0.4); cursor: pointer;">
                              </div>
                              <div class="column">
                                <img src="/images/estampados/animal/1.jpg" alt="Snow" style="width:100%; box-shadow: 0px 3px 6px rgba(0,0,0,0.4); cursor: pointer;">
                              </div>
                              <div class="column">
                                <img src="/images/estampados/infantil/1.jpg" alt="Forest" style="width:100%; box-shadow: 0px 3px 6px rgba(0,0,0,0.4); cursor: pointer;">
                              </div>
                              <div class="column">
                                <img src="/images/estampados/rayados/1.jpg" alt="Mountains" style="width:100%; box-shadow: 0px 3px 6px rgba(0,0,0,0.4); cursor: pointer;">
                              </div>
                              <div class="column">
                                <img src="/images/estampados/animal/1.jpg" alt="Snow" style="width:100%; box-shadow: 0px 3px 6px rgba(0,0,0,0.4); cursor: pointer;">
                              </div>
                              <div class="column">
                                <img src="/images/estampados/infantil/1.jpg" alt="Forest" style="width:100%; box-shadow: 0px 3px 6px rgba(0,0,0,0.4); cursor: pointer;">
                              </div>
                              <div class="column">
                                <img src="/images/estampados/rayados/1.jpg" alt="Mountains" style="width:100%; box-shadow: 0px 3px 6px rgba(0,0,0,0.4); cursor: pointer;">
                              </div>
                        </div>

                        <div class="form-group">
                            <label for="estampaPersonalizado" class="form-label">Carga un estampado personalizado</label>
                            <input class="form-control" type="file" id="estampa">
                            </p>
                            <button type="button" class="prev-btn">Anterior</button>
                            <button type="button" class="next-btn">Ingresar datos de Contacto</button>

                        </div>
                    </div>
    
                    <div class="step step-3">
                        <div class="form-group">
                            <label for="nombre">Nombre</label>
                            <input type="text" id="nombre" name="nombre">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" id="email" name="email">
                        </div>
                        <div class="form-group">
                            <label for="telefono">Telefono</label>
                            <input type="number" id="telefono" name="telefono">
                        </div>
                        <div class="form-group">
                            <label for="direccion">Direccion</label>
                            <input type="text" id="direccion" name="direccion">
                        </div>
                        <div class="form-group">
                            <label for="entrega">Selección de entrega</label>
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Opciones...</option>
                                <option value="entregaDomicilio">Entrega a Domicilio</option>
                                <option value="retiro">Retiro</option>
                            </select>
                        </div>
                        <button type="button" class="prev-btn">Anterior</button>
                        <button type="button" class="sub-btn" data-toggle="modal" data-target="#exampleModalCenter">
                          Confirmar Cotización
                      </button>
    
                      <!-- Modal -->
                      <div class="modal fade" style="color: black" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                          <div class="modal-dialog modal-dialog-centered" role="document">
                              <div class="modal-content" >
                                  <div class="modal-header">
                                      <h5 class="modal-title" id="exampleModalLongTitle">Confirmación</h5>
                                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                          <span aria-hidden="true">&times;</span>
                                      </button>
                                  </div>
                                  <div class="modal-body">
                                      Tu solicitud de cotización esta por ser enviada. Nos pondremos en contacto para que recibas toda la información sobre tu cotización <br>
                                      <strong>Tiempo de demora de contacto : 48 hs</strong>
    
                                  </div>
                                  <div class="modal-footer">
                                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                      <button type="submit" class="btn btn-primary">Enviar Cotización</button>
                                  </div>
                              </div>
                          </div>
                      </div>
                    </div>
                </form>
    
            </div>
        </section>
        <div class="contact-container">
            <div class="enroll">
                <h2>Contactanos</h2>
            </div>
            <section class="newsletterContainer" id="Contacto">
                <div id="backgroudTransparent">
                    <div class="tituloNewsletter">
                        <h1>RECIBE LAS ÚLTIMAS NOVEDADES DE FERNATEX!</h1>
                    </div>

                    <div class="newsletterBox">
                        <form action="" method="POST" >
                            <label>Dejanos tu email</label>
                            <input type="text" name="email">
                            <button type="submit" class="button2" style="vertical-align:middle">Enviar</button>
                        </form>
                        <div class="socialBox">
                            <div class="iconsContainer">
                                <li class="icon whatsapp">
                                    <span><a href="https://api.whatsapp.com/send?phone=541134209000""><i class="fa fa-whatsapp" ></i></a></span>
                                </li>
                                <li class="icon facebook">
                                    <span><a href="https://www.facebook.com/JPpigmento/"><i class="fab fa-facebook-f" ></i></a></span>
                                </li>
                                <li class="icon instagram">
                                    <span><a href="https://www.instagram.com/fernatex_srl/?hl=en"><i class="fa fa-instagram" ></i></a></span>
                                </li>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            
            <!----- FIN Newsletter  ----->
                

            <%- include('./partials/footer') %>
        </div>
        <div id="suriSlug"><h4>Desarrolado por <a href="">Suri.it</a> </h4></div>
    </main>


    <script src="/js/cotizador.js"></script>
</body>

</html>